# Backend Configuration
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:8080
PRODUCTION_FRONTEND_URL=https://influitivezone.com

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=tinylama

# Hugging Face API (for embeddings and sentiment analysis)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Custom Search API (FREE - 100 searches per day)
# Get your API key at: https://console.developers.google.com/
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
# Get your Search Engine ID at: https://cse.google.com/cse/
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# ChromaDB Configuration (optional - uses default settings)
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Development/Production
NODE_ENV=development
